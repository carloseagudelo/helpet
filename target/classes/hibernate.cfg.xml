<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="connection.url">jdbc:mysql://localhost:3306/helpet</property>
  <property name="connection.username">root</property>
  <property name="connection.password">admin</property>
  <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="show_sql">true</property>
  
  <mapping resource="com/helpet/iw/mapping/Breed.hbm.xml"/>
  <mapping resource="com/helpet/iw/mapping/City.hbm.xml"/>
  <mapping resource="com/helpet/iw/mapping/Country.hbm.xml"/>
  <mapping resource="com/helpet/iw/mapping/Location.hbm.xml"/>
  <mapping resource="com/helpet/iw/mapping/Pet.hbm.xml"/>
  <mapping resource="com/helpet/iw/mapping/User.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
